#!/usr/bin/env ruby

require 'command_names'
require 'slop'

# TODO(feature): Add support for generating names with a given prefix or suffix
# TODO(feature): Add color for errors

begin
  opts = Slop.parse do |o|
    o.integer '-c', '--count',
              'number of names to generate (default: 5)',
              default: 5
    o.bool    '-h', '--help',
              'print help and exit'
    o.on      '-v', '--version', 'print version and exit' do
      puts "CMDNAMES v#{CommandNames::VERSION}"
      exit
    end
  end
rescue Slop::Error => e
  puts e.message
  exit
end


if opts.help?
  puts opts
  exit
end

puts CommandNames.rand_command_name opts[:count]